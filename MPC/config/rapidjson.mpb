project {
  avoids += no_rapidjson

  expand(RAPIDJSON_ROOT) {
    $RAPIDJSON_ROOT
    $(DDS_ROOT)/tools/rapidjson
  }

  specific(cmake) {
    includes += ${OPENDDS_RAPIDJSON_INCLUDE}
    macros   += ${OPENDDS_RAPIDJSON_MACRO}
  } else {
    includes += $(RAPIDJSON_ROOT)/include
    macros   += OPENDDS_RAPIDJSON
  }
}
